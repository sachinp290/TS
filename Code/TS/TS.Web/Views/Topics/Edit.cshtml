@model TS.Web.Models.TopicViewModel

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Topic: Edit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label class="col-md-2 text-right"> Name </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 text-right"> Subject </label>
            <div class="col-md-10">
                @Html.DropDownList("SubjectID", (IEnumerable<SelectListItem>)ViewBag.Subjects, new { @class = "form-control col-md-6" })
                @Html.ValidationMessageFor(model => model.SubjectID, "", new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
