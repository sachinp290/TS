@model TS.Web.Models.TopicViewModel

@{
    ViewBag.Title = "Delete";
}

<h4>Topic: Delete</h4>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
        
  

    <div class="form-group">
        <label class="col-md-2"> Name: </label>
        <label class="col-md-10"> @Html.DisplayFor(model => model.Name) </label>        
    </div>

    <div class="form-group">
        <label class="col-md-2"> Subject: </label>
        <label class="col-md-10"> @Html.DisplayFor(model => model.SubjectID)  </label>
    </div>

    <div class="form-group">
        <label class="col-md-2"> Subject Name: </label>
        <label class="col-md-10"> @Html.DisplayFor(model => model.SubjectName)    </label>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
